


<h2 class="text-center my-5">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="d-flex flex-row justify-content-center">
  <fieldset class="form-group border border-info" style="width:500px">
    <div class="form-group pt-4 px-3 d-flex flex-row align-items-center">
      <%= f.label :email, :class => 'mr-2' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

  <div class="actions">
    <%= f.submit "Submit", :class => 'btn btn-info ml-3 mb-4' %>
  </div>
<% end %>
