<h2 class="text-center my-5">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex flex-row justify-content-center">
  <fieldset class="form-group border border-info" style="width:500px">
    <div class="form-group pt-4 px-3 d-flex flex-row align-items-center">
      <%= f.label :email, :class => 'mr-2' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

  <div class="form-group pt-3 px-3 d-flex flex-row align-items-center">
    <%= f.label :password, :class => 'mr-2' %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group pt-3 px-3 d-flex flex-row align-items-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => 'ml-2' %>
    </div>
  <% end %>
  
    <%= f.submit "Log in", :class => 'btn btn-info ml-3 mb-4'  %>
  </div>
   
<% end %>


