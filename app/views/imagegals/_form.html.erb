<%= form_with(model: imagegal, local: true) do |form| %>
  <% if imagegal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(imagegal.errors.count, "error") %> prohibited this imagegal from being saved:</h2>

      <ul>
        <% imagegal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="d-flex flex-row justify-content-center">
  <fieldset class="form-group border border-info" style="width:500px">
    <div class="form-group pt-4 px-3 d-flex flex-row align-items-center">
      <%= form.label :title, :class => 'mr-2' %>
      <%= form.text_field :title, :class => 'form-control' %>
    </div>
    <div class="form-group pt-3 px-3 d-flex flex-row align-items-center">
      <%= form.label :images, :class => 'mr-2' %>
      <%= form.file_field :images, multiple: true, :class => 'form-control'  %>
    </div>
    <div class="form-group pt-3 px-3 d-flex flex-row align-items-center">
      <%= form.label :caption, :class => 'mr-2' %>
      <%= form.text_area :caption, :class => 'form-control'  %>
    </div>
     <div class="form-group pt-3 px-3 d-flex flex-row align-items-center">
      <%= form.label :tag_list,"Tags (Separated By Commas)", :class => 'mr-2' %>
      <%= form.text_field :tag_list, :class => 'form-control' %>
    </div>
    <div class="actions">
      <%= form.submit 'Submit', :class => 'btn btn-info ml-3 mb-4' %>
    </div>
  </fieldset>
</div>
<% end %>
