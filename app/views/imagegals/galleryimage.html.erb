<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarTogglerDemo01">
      
      <%= link_to 'Gallery App', galleryimage_path, class:"navbar-brand" %>
      <% if current_user %>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            
            <li class="nav-item active">
                
                <%= link_to 'View-Records', imagegals_path, class:"nav-link" %>
            </li>
            <li class="nav-item active">
                <%= link_to 'Add New Record', new_imagegal_path, class:"nav-link" %>
            </li>
            
        
          
        </ul>
        <ul class="navbar-nav  ">
            <li class="nav-item">
                <%= link_to "Sign out", destroy_user_session_path, :method => :get, class:"btn btn-info"%>
            </li>
        </ul>
      <% else %>
        <ul class="navbar-nav ">
          <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, :class => 'btn btn-info' %>
              <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-info'  %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>



  <p id="notice"><%= notice %></p>
  <div class="container">
    <h1 class="text-center mt-3 mb-3">Gallery App</h1>
    <div class="d-flex flex-row flex-wrap justify-content-start">
      <% @imagegals.each do |imagegal| %>
        <div class="card mb-5 ml-4" style="width: 15rem;">
            <%= image_tag(imagegal.image, class:'card-img-top img-fluid')%>
            <div class="card-body">
                <h5 class="card-title black-color"><%= imagegal.title %></h5>
                <p class="card-text"><%= imagegal.caption %></p>
                <p class="card-text"><b>Published On:</b> <%= imagegal.created_at.to_s.split(' ')[0] %></p>
            </div>
        </div>  
      <% end %>
    </div>
    <div class="d-flex flex-row justify-content-center"><%= paginate @imagegals %></div>
  </div>

  <br>
</body>



