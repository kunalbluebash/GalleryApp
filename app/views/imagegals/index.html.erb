<body>
  <h4 id="notice"><%= notice %></h4>

  <div class="container">
    <h1 class="text-center mt-3 mb-3">Gallery App</h1>
    <div class="d-flex flex-row flex-wrap justify-content-start">
      <% @imagegals.each do |imagegal| %>
        <div class="card mb-5 ml-4" style="width: 15rem;">
            <%= image_tag(imagegal.image, class:'card-img-top img-fluid') if imagegal.image.attached? %>
            <div class="card-body">
                <h5 class="card-title black-color"><%= imagegal.title %></h5>
                <p class="card-text"><%= imagegal.caption %></p>
                <p class="card-text"><b>Published On:</b> <%= imagegal.created_at.to_s.split(' ')[0] %></p>
                <p class="card-text"><b>Updated On:</b> <%= imagegal.updated_at.to_s.split(' ')[0] %></p>
                <p class="card-text"><b>Published By:</b> <%= current_user.email.split('@')[0] %></p>
                <p class="card-text">Tags: <%= imagegal.tag_list %>
                  </p>
                <p class="card-text d-flex justify-content-start"><%= link_to 'Edit', edit_imagegal_path(imagegal), :class => 'btn btn-warning mr-1' %>
                <%= link_to 'Show', imagegal, :class => 'btn btn-warning mr-1' %>
                <%= link_to 'Destroy', imagegal, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger mr-1' %>
                </p>
                
            </div>
        </div>  
      <% end %>
    </div>
    
    <div class="d-flex flex-row justify-content-center"><%= paginate @imagegals %></div>
    
  </div>
</body>



