<!DOCTYPE html>
<html>
  <head>
    <title>Image Gallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarTogglerDemo01">
      
      <%= link_to 'Gallery App', root_path, class:"navbar-brand" %>
      <% if current_user %>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            
            <li class="nav-item active">
                
                <%= link_to 'View-Records', imagegals_path, class:"nav-link" %>
            </li>
            <li class="nav-item active">
                <%= link_to 'Add New Record', new_imagegal_path, class:"nav-link" %>
            </li>
            
        
          
        </ul>
        <ul class="navbar-nav  ">
             <li class="nav-item">    
            <%= form_tag tagged_path(tag: tag), :class => 'form-inline', :method => :get do %>
            <%= text_field_tag :tag ,params[:tag], placeholder: "Search for Tags", :class => 'form-control' %>
              <%= submit_tag 'Search' , :class => 'btn btn-info', :name =>nil %>
            <% end %>
          <li>
            <li class="nav-item ml-3">
                <%= link_to "Sign out", destroy_user_session_path, :method => :get, class:"btn btn-info"%>
            </li>
        </ul>
      <% else %>
        <ul class="navbar-nav ">
          <li class="nav-item mr-3">
              <%= link_to "Log in", new_user_session_path, :class => 'btn btn-info' %>
              <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-info'  %>
              <%= link_to "Forget Password", new_user_password_path, :class => 'btn btn-info' %>
              
          </li>
          <li class="nav-item">    
            <%= form_tag tagged_path(tag: tag), :class => 'form-inline', :method => :get do %>
            <%= text_field_tag :tag ,params[:tag], placeholder: "Search for Tags", :class => 'form-control' %>
              <%= submit_tag 'Search' , :class => 'btn btn-info', :name =>nil %>
            <% end %>
          <li>
        </ul>
      <% end %>
    </div>
  </nav>
    <div class="container">
      
        <div class="col-lg-12 col-xs-12 col-sm-12">
        <%= yield %>
        </div>
        
        
        
      
    </div>
  </body>
</html>
